<header class="bar">
    <section></section>
    <section id="calendar">
        <span id="calendar-text"></span>
    </section>
    <section></section>
</header>

<style>
    .bar{
        z-index: 9;
        display: flex;
        justify-content: space-between;
        align-items: center;
        position: fixed;
        top: 0;
        width: 100%;
        height: 35px;
        background-color: var(--bg-black-terminal);
        color: white;
        font-size: .8rem;    }
    #calendar{
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        transition: .1s ease;
        padding:.3rem 1rem;
        border-radius: 20px;
        cursor: default;
    }
    #calendar:hover{
        background-color: var(--bg-black);
    }
</style>

<script>

    const $calendar = document.getElementById('calendar-text')
    const fecha = new Date()
    const fechaHoy = `${fecha.getDay()}/${fecha.getMonth()}/${fecha.getFullYear()}`

    $calendar.innerText = fechaHoy
</script>