---
import { Image } from "astro:assets";
import logo from "../assets/manjaro-logo.png";
import Logo from "./Logo.astro";
---

<section class="preloads">
  <section class="terminal">
    <p>
      <pre>
#!/bin/bash
      
# This script starts the MargaroOS operating system
      
# Check if the operating system is installed
if [ ! -f /boot/margaroos.img ]; then
 echo "The MargaroOS operating system is not installed."
 exit 1
 fi
      
# Start the virtual machine
qemu-system-x86_64 -kernel /boot/margaroos.img -m 1024 -hda /data/margaroos.qcow2
              </pre>
    </p>

    <div class="cursor"></div>
  </section>
  <section class="load-container">
    <div class="loading"></div>
    <Logo />
  </section>
</section>

<style>
  .preloads {
    position: absolute;
    top: 0;
    left: 0;
    background-color: var(--bg-black-terminal);
    width: 100%;
    height: 100vh;
  }
  .terminal {
    z-index: 100;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    background-color: var(--bg-black-terminal);
    padding-left: 0.5rem;
    animation: bye 0.1s;
    animation-delay: 2s;
    animation-fill-mode: forwards;
  }
  .terminal pre {
    color: var(--text-color-green-terminal);
    font-size: 0.9rem;
    overflow: hidden;
    animation: typing 1s alternate steps(1);
  }
  .cursor {
    width: 1ch;
    border-bottom: 3px var(--text-color-green-terminal) solid;
    animation: blink 1s infinite step-end;
  }
  .loading {
    border: 6px solid white;
    border-radius: 100%;
    border-top-color: var(--bg-black-terminal);
    border-bottom-color: var(--bg-black-terminal);
    width: 50px;
    height: 50px;
    animation: loading 1.5s infinite linear;
  }
  .load-container{
    z-index: 90;
    display: flex;
    flex-direction: column;
    width: inherit;
    height: inherit;
    gap: 48px;
    align-items: center;
    justify-content: flex-end;
    font-size: 3rem;
  }
 


  @keyframes typing {
    from {
      height: 0;
    }
  }

  @keyframes blink {
    50% {
      opacity: 0;
    }
  }

  @keyframes bye {
    to {
      opacity: 0;
      z-index: -999;
      display: none;
    }
  }
  @keyframes loading {
    0% {
      transform: rotate(0deg);
    }

    100% {
      transform: rotate(360deg);
    }
  }
</style>
